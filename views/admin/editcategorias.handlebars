{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Editar categoria:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/edit" method="post">
            <label for="nome">Nome: </label>
            <input type="hidden" name="id" value="{{categoria._id}}">
            <input class="form-control" type="text" id="nome" placeholder="Nome da categoria" name="nome" value="{{categoria.nome}}"/>
            <label for="slug">Slug: </label>
            <input class="form-control" type="text" id="slug" placeholder="Slug categoria" name="slug" value="{{categoria.slug}}"/>
            <br/>
            <button type="submit" class="btn btn-success">Editar categoria</button>
        </form>
    </div>
</div>